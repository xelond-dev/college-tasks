<Window x:Class="Samokat.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Samokat"
        mc:Ignorable="d"
        Title="Ошибка" Height="200" Width="600" Background="#ff335f">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="Error_TextBlock" FontSize="25" Margin="15" TextWrapping="Wrap" Foreground="White" TextAlignment="Center" Text="Ошибка"/>
            <Button Width="350" Height="50" Margin="15" FontSize="25" Foreground="White" Content="Закрыть" Click="Close_Button_Event" />
        </StackPanel>
    </Grid>
</Window>
