<Page x:Class="Praktos5.View.Pages.EditTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Praktos5.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditTestPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding EditTestDG}" Width="auto" HorizontalAlignment="Center" VerticalAlignment="Top" CanUserAddRows="True">
        </DataGrid>
        <Button Command="{Binding SaveChangesCommand}" Grid.Row="1" MaxWidth="300" VerticalAlignment="Center" HorizontalAlignment="Center">Измениить</Button>
    </Grid>
</Page>
