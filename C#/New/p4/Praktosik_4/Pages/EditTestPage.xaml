<Page x:Class="Praktosik_4.Pages.EditTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Praktosik_4.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditTestPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="EditTestDG" Width="auto" HorizontalAlignment="Center" VerticalAlignment="Top" CanUserAddRows="True" >
        </DataGrid>
        <Button x:Name="AddNewTest" Grid.Row="1" MaxWidth="300" VerticalAlignment="Center" HorizontalAlignment="Center" Click="SaveChanges_Click">Измениить</Button>
    </Grid>
</Page>
